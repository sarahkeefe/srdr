<%= nested_form_for @primary_publication, :remote=>true do |f| %>

  <div class="field">
    <%= f.label :publication_title %>:  <%= f.text_field :title %>
	</div>
  <div class="field">
  <%= f.label :author %>:
    <%= f.text_field :author, :size => 12 %>

    <%= f.label :country %>: 
    <%= f.text_field :country, :size => 10 %>

    <%= f.label :year %>:
    <%= f.text_field :year, :size => 6 %>
</div>

	<%= f.fields_for :publication_numbers do |t| %>
		Identifier: <%= t.text_field :number %> Identifier type:
		<%= t.text_field :number_type %><%= t.link_to_remove "Remove" %><br/>
  <% end %><br/>
<%= f.link_to_add "Add an Identifier", :publication_numbers %>



	<div class="actions">
    <%= hidden_field_tag :is_primary, "true" %>
	<%= f.submit "Save" %></div>

<% end %>
