<%= form_for @primary_publication, :remote=>true do |f| %>


  <div class="field">
    <%= f.label :publication_title %>:
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %>:
    <%= f.text_field :author, :size => 12 %>

    <%= f.label :country %>:
    <%= f.text_field :country, :size => 10 %>

    <%= f.label :year %>:
    <%= f.text_field :year, :size => 6 %>
  </div>
  <div class="field">
    <%= f.label :isbn %>:
    <%= f.text_field :isbn %>
  </div>
  <div class="field">
    <%= f.label :ui %>:
    <%= f.text_field :ui, :size => 9 %>

    <%= f.label :ui_type %>:
    <%= f.text_field :ui_type %>
  </div>
    <%= hidden_field_tag :is_primary, "true" %>
	<%= f.submit "Save" %>
<% end %>
