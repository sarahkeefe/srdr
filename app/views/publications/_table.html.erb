<% if @secondary_publications.length > 0 %>
	<table border="1" bordercolor="#000000" cellspacing="0" cellpadding="5">
	<th>UI</th>
	<th>Title</th>
	<th>Author</th>
	<th>Country</th>
	<th>Year</th>
	<th>Edit</th>
	<th>Delete</th>
	<% for pub in @secondary_publications %>
		<tr>
		<td><%= pub.ui %></td>
		<td><%= pub.title %></td>
		<td><%= pub.author %></td>
		<td><%= pub.country %></td>
		<td><%= pub.year %></td>
		<td><%= link_to :Edit, edit_publication_path(pub), :remote=>true %></td>
		<td><%= link_to :Delete, publication_path(pub), :remote=>true, :confirm => 'Are you sure?', :method=>:delete %></td>
		</tr>
	<% end %>
<% else %>
  <em>You may add secondary publications to this study using the form below.</em>
<% end %>

</table>
