<h2>Editing Study</h2>
<h3>Key Questions Answered</h3>
<% unless @questions.empty? %>
<%= form_for(@study, :remote => true) do |f| %>
  <% @questions.each do |q| %>
	    <% checked_flag = "" %>
	    <% if @checked_ids.include?(q.id) %>
	    	<% checked_flag = "checked" %>
	    <% end %>
	    <input type="checkbox" name="<%= "question_" + q.id.to_s %>" <%= checked_flag %> >
		<%= q.question_number.to_s + ". " + q.question %><br/>  
	  <% end %>
	  <%= f.submit "Save Questions" %>
<% end %>
  <% else %>
    There are no key questions associated with this project.
  <% end %>

<br/>
<hr width="80%" size="1" align="center"><br/>

