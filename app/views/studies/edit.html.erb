<h2>Editing Study</h2>
<h3>Key Questions Addressed</h3>

<% unless @questions.empty? %>
<div class="form_content">
	<%= form_for(@study, :remote => true) do |f| %>
    <div style="position:relative;"><br/>
			<div class="field">
				<% @questions.each do |q| %>
					<% checked_flag = "" %>
					<%# see if the "checked_ids" array contains the id of the current question %>
					<% if @checked_ids.include?(q.id) %>
						<% checked_flag = "checked" %>
					<% end %>
					<input type="checkbox" class="cbox" name="<%= "question_" + q.id.to_s %>" <%= checked_flag %> >
					<%= q.question_number.to_s + ". " + q.question %><br/>
				<% end %>
			</div>
		
			<div id="kq_save_status_div" class='form_save_status' style="display:none;">
		  	<br/>Saved.
	  	</div>
	  </div>
		<div class="actions">
			<button type="submit" class="positive">
				<%= image_tag "Accept.png"%>Save Questions
			</button>
		</div>
		<div id="key_question_validation_message" valign='center'></div>
 	<% end %>
</div>
<% else %>
  There are no key questions associated with the project. <%= link_to "Add Key Questions", edit_project_path(session[:project_id])%>
<% end %>

