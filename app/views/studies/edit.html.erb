<h2>Editing Study</h2>
<h3>Key Questions Addressed</h3>

<% unless @questions.empty? %>
	<%= form_for(@study, :remote => true) do |f| %>
		<table class="form_table">
		<% @questions.each do |q| %>
			<tr><td>
			<% checked_flag = "" %>
			<%# see if the "checked_ids" array contains the id of the current question %>
			<% if @checked_ids.include?(q.id) %>
				<% checked_flag = "checked" %>
			<% end %>
			<input type="checkbox" name="<%= "question_" + q.id.to_s %>" <%= checked_flag %> >
			</td><td>
			<%= q.question_number.to_s + ". " + q.question %><br/></td></tr>
		<% end %>
		<tr><td colspan="2">
			<div class="actions">
						<button type="submit" class="positive">
			<%= image_tag "Accept.png"%>Save Questions
		</button>
			</div>
			</td><td>
			</div><div id="key_question_validation_message">
			</td></tr></table>
 <% end %>
<% else %>
  There are no key questions associated with the project. <%= link_to "Add Key Questions", edit_project_path(session[:project_id])%>
<% end %>


