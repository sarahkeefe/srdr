<h2>Create New Study</h2>
  <h3>Study Template</h3><br/>
 
	<%= form_for(@study_template) do |f| %>
		<div class="form_content">
	
		<div class="field">
			Choose a template for this study:<br/>
		  <%= f.hidden_field :study_id, :value => @study.id %>
		  <%= hidden_field_tag :project_id, params[:project_id] %>
			<% @template_list_array = Study.get_template_list_array(params[:project_id]) %>
		    <% unless @template_list_array.empty? %>
		    	<%= f.select :template_id, options_for_select(@template_list_array), :class => "inline_field" %><br/>

				<% else %>
				  There are no templates defined for this project. <strong>Please contact the project administrator before proceeding.</strong>
				<% end %>
		</div>
		  
		   <div class="actions">
		<button type="submit" class="negative">
			<%= image_tag "Cancel.png"%>Cancel
		</button>		
		<button type="submit" class="positive">
			<%= image_tag "Note_go.png"%>Assign Template and Continue
		</button>
	  </div>
	  </div>
	<% end %>




