<%= form_for(@quality_aspect, :remote => true, :html=>{:id=>"edit_quality_aspect_form"}) do |f| %>
  <% if @quality_aspect.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quality_aspect.errors.count, "error") %> prohibited this quality_aspect from being saved:</h2>

      <ul>
      <% @quality_aspect.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form_content">
    <%= f.hidden_field :study_id, :value => session[:study_id] %>

  <div class="field">
    <label>Quality Dimension Title:</label>
    <%= f.text_field :dimension %>
  </div>
  <div class="field">
    <label>Quality Dimension Value:</label>
    <%= f.text_field :value %>
  </div>
  <div class="field">
    <label>Notes:</label>
    <%= f.text_area :notes, :rows => 4, :cols => 40 %>
  </div>
  <div class="actions">
		<button type="submit" class="positive">
			<%= image_tag "Add.png"%>Save Edits
		</button>  <%= link_to 'Cancel', new_quality_aspect_path, :remote=>true %>
  </div>
  </div>
<% end %>
